---
pageable: true
per_page: 12
---
<% breadcrumbs.unshift tagname %>
<h1>Articles tagged '<%= tagname %>'</h1>

<% if paginate %>
  <p>Page <%= page_number %> of <%= num_pages %></p>
<% end %>

<ul>
  <% page_articles.each_with_index do |article, i| %>
    <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
  <% end %>
</ul>

<% if paginate %>
<ul class="pager">
  <li class="previous<% unless next_page %> disabled<% end %>">
    <%= link_to '&larr; Previous page', next_page %>
  </li>
  <li class="next<% unless prev_page %> disabled<% end %>"">
    <%= link_to 'Next page &rarr;', prev_page %>
  </li>
</ul>
<% end %>
