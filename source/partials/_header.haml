.logo.hidden-phone
  %img.sigil{:src=>"/assets/img/sigil-white.svg",:alt=>"4pdj"}
.navbar.navbar-medium.navbar-inverse.navbar-static-top#navbar
  .navbar-inner
    %a.brand{:href=>'/'}
      4pdj
    %ul.nav
      - blog_instances.keys.each do |key|
        %li.divider-vertical
        %li
          %a{:href=>'/' + key.to_s}
            = key.to_s.titleize
      %li.divider-vertical.hidden-phone
      %li.dropdown.hidden-phone
        %a.dropdown-toggle(href='#' data-toggle='dropdown')
          Archive
          %b.caret
        %ul.dropdown-menu
          = partial "partials/archive"
    %ul.nav.pull-right.hidden-phone
      %li
        %form.navbar-search.pull-left
          %input.search-query(type="text" placeholder="Search")
      %li
        %a{:href=>'http://twitter.com/_pdj_', :target=>"_blank"}
          %img#twitter{:src=>"/assets/img/twitter.png", :alt=>"Twitter"}
      %li
        %a{:href=>'http://nl.linkedin.com/in/pdjnl', :target=>"_blank"}
          %img#linkedin{:src=>"/assets/img/linkedin.svg", :alt=>"LinkedIn"}
      %li
        %a{:href=>'/feed.xml'}
          %img#rss{:src=>"/assets/img/rss.svg", :alt=>"Syndication"}
