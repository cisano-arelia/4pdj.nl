<% wrap_layout :layout do %>
  <article>
    <header>
      <h1 class="headline"><%= current_page.title %></h1>
    </header>
    <div class="article-content">
      <%= yield %>
    </div>
    <footer>
      <div class="byline">
        By <address class="author"><a rel="author" href="/pages/about/" title="<%= current_page.data['author'] %>"><%= current_page.data['author'] %></a></address>
        on <time pubdate datetime="<%= current_page.date.strftime('%Y-%m-%d') %>"><%= current_page.date.strftime('%b %e, %Y') %></time>
      </div>
      <br/>
      <div class="tagline">
        Tagged as
        <% if current_page.data['tags'] %>
        <% current_page.data['tags'].sort.each do |tag| %>
           <%= link_to tag, tag_path(tag) %>,
        <% end %>
        <% end %>
      </div>
    </footer>
  </article>
<% end %>

