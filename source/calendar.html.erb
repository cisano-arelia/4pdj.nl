---
pageable: true
---
<h1>Archive for
  <% case page_type
     when 'day' %>
    <%= Date.new(year, month, day).strftime('%b %e %Y') %>
  <% when 'month' %>
    <%= Date.new(year, month, 1).strftime('%b %Y') %>
  <% when 'year' %>
    <%= year %>
  <% end %>
</h1>

<% if paginate %>
  <p>Page <%= page_number %> of <%= num_pages %></p>
<% end %>

<ul>
  <% page_articles.each_with_index do |article, i| %>
    <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
  <% end %>
</ul>

<% if paginate %>
<ul class="pager">
  <li class="previous<% unless next_page %> disabled<% end %>">
    <%= link_to '&larr; Older', next_page %>
  </li>
  <li class="next<% unless prev_page %> disabled<% end %>"">
    <%= link_to 'Newer &rarr;', prev_page %>
  </li>
</ul>
<% end %>
